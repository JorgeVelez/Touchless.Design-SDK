<UserControl x:Class="TouchlessDesign.Components.Ui.Controls.BoolPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouchlessDesign.Components.Ui.Controls"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:properties="clr-namespace:TouchlessDesign.Components.Ui.ViewModels.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <d:UserControl.DataContext>
    <properties:BoolProperty Name="Test Name" Value="True"/>
  </d:UserControl.DataContext>
  <ui:SimpleStackPanel Spacing="8" Orientation="Horizontal">
    <Label DockPanel.Dock="Left" FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalAlignment="Center" Content="{Binding Name}" />
    <ui:ToggleSwitch IsOn="{Binding Value}" />
  </ui:SimpleStackPanel>
</UserControl>
