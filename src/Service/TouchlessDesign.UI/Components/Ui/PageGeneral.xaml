<UserControl x:Class="TouchlessDesign.Components.Ui.PageGeneral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouchlessDesign.Components.Ui"
             xmlns:controls="http://schemas.modernwpf.com/2019"
             xmlns:viewModels="clr-namespace:TouchlessDesign.Components.Ui.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <d:UserControl.DataContext>
    <viewModels:GeneralViewModel />
  </d:UserControl.DataContext>
  <Grid Margin="8">
    <controls:SimpleStackPanel Spacing="16">
      <controls:ToggleSwitch controls:ControlHelper.Header="Start Touchless.Design On Start Up" IsOn="{Binding StartOnStartup.Value}" />
      <Button Click="HandleOpenDirectoryClicked">Open Directory</Button>
    </controls:SimpleStackPanel>
  </Grid>
</UserControl>
